<%= form_for(@micropost) do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: t("static_pages.place_hold_text") %>
  </div>
  <%= f.submit t("static_pages.submit_post"), class: "btn btn-primary" %>
  <span class="picture">
    <%= f.file_field :picture, accept: "image/jpeg,image/gif,image/png,image/jpg" %>
  </span>
<% end %>
<%= javascript_include_tag "micropost_form" %>
