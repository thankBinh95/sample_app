<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render "shared/user_info" %>
      </section>
      <section class="micropost_form">
        <%= render "shared/micropost_form" %>
      </section>
    </aside>
      <div class="col-md-8">
        <h3><%= t "static_pages.h3_msfeed" %></h3>
        <%= render "shared/feed" %>
    </div>
  </div>
<% else %>
<div class="center jumbotron">
  <h1><%= t ".home_h1" %></h1>
    <h2>
     <%= t ".home_h2_1" %>
      <a href="http://www.railstutorial.org/"><%= t ".document" %></a>
      <%= t ".home_h2_2" %>
    </h2>
    <%= link_to t(".home_sign_up"), signup_path, class: "btn btn-lg btn-primary" %>
</div>
<%= link_to image_tag("rails.png", alt: "Rails logo"),
  "http://rubyonrails.org/" %>
<% end %>

